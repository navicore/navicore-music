# Backend Configuration

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=3000

# Database
DATABASE_URL=sqlite://data/navicore-music.db

# R2 Storage
R2_BUCKET_NAME=navicore-music-files
R2_REGION=auto
R2_ACCESS_KEY_ID=your-access-key-id
R2_SECRET_ACCESS_KEY=your-secret-access-key
# For local development with miniflare/wrangler
R2_ENDPOINT_URL=http://localhost:8788

# Authentication
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRY_HOURS=24

# Logging
RUST_LOG=navicore_music=debug,tower_http=debug